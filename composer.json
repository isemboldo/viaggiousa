{
  "name": "isemboldo/viaggiousa",
  "description": "Diario di viaggio USA - MVC refactor (PHP + MariaDB)",
  "type": "project",
  "require": {
    "php": "^8.1",
    "vlucas/phpdotenv": "^5.6",
    "twig/twig": "^3.0",
    "phpmailer/phpmailer": "^6.9",
    "robmorgan/phinx": "^0.15"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo 'Created .env from example'.PHP_EOL; }\""
    ],
    "phinx": "vendor/bin/phinx"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
